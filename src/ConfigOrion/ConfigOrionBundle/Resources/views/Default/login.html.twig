        <link rel="shortcut icon" href="{{ asset('bundles/configorion/ico/favicon.ico') }}">
    </head>

    <body>
        <noscript>
        <h1>Debe ACTIVAR el JavaScript de su Navegador</h1>
        </noscript>

        {% if error %}
        <div class="alert alert-danger fade in">
            <button class="close" aria-hidden="true" data-dismiss="alert" type="button">Ã—</button>
            <span class="glyphicon glyphicon-remove-sign"></span>
            <strong>Error! </strong>
            {{ error.message |trans}}
        </div>
        {% endif %}       
        <div class="panel-login">
            <div class="panel panel-default">
                <div class="panel-body">
                {% block article %}
                    <form action="{{ path('usuario_login_check') }}" method="post" class="form-login">
                        <div class="input-group input-group">
                            <span class="input-group-addon glyphicon glyphicon-user"></span>
                            <!--<input type="text" autofocus="true" class="form-control" placeholder="Usuario" id="username" 
                                   name="_username" /><br />-->
                            {{ form_widget(login_form._username) }}
                        </div>
                        <div class="input-group input-group">
                            <span class="input-group-addon glyphicon glyphicon-lock"></span>
                            <!--<input type="password" class="form-control" placeholder="Contrase&ntilde;a"  
                                   id="password" name="_password" /><br />-->
                            {{ form_widget(login_form._password) }}
                        </div>
                        <input type="submit" name="login" value="Acceder al sistema" class="btn btn-success active" />

                            {{ form_rest(login_form) }}
                    </form>
                {% endblock %}

                </div>
            </div>
        </div>

        <div class="footer">
            <p>Copyright &copy; {{ 'now'|date('Y') }} - Universidad de las Ciencias Inform&aacute;ticas<br />Sistema para la configuraci&oacute;n del mecanismo de rastreo de Ori&oacute;n 2.0 | Motor de B&uacute;squeda Cubano
        </div>


          {% block javascripts %}
        <script src="{{ asset('bundles/configorion/js/jquery.js') }}" type="text/javascript"></script>
        <script src="{{ asset('bundles/configorion/js/bootstrap.min.js') }}" type="text/javascript"></script>
        <script src="{{ asset('bundles/configorion/js/bootstrap.js') }}" type="text/javascript"></script>
          {% endblock %}
