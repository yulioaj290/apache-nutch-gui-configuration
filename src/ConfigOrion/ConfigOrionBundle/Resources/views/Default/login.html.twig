        <!-- Le styles -->
        <link rel="stylesheet" href="{{ asset('bundles/configorion/css/formLoginStyle.css') }}" type="text/css" />
        <link rel="stylesheet" href="{{ asset('bundles/configorion/css/bootstrap.min.css') }}" type="text/css" />
        <link rel="stylesheet" href="{{ asset('bundles/configorion/css/style.css') }}" type="text/css" />
        <!-- HTML5 shim, for IE6-8 support of HTML5 elements -->
        <!--[if lt IE 9]>
          <script src="{{ asset('bundles/configorion/js/html5shiv.js') }}"></script>
