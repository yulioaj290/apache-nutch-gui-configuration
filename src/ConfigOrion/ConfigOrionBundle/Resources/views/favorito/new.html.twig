{% extends 'ConfigOrionBundle::layout.html.twig' %}
{% block body%}

<ul class="breadcrumb">  
    <li><a href="{{ path('favorito') }}">Favoritos</a></li>    
    <li>Crear favorito</li>
</ul>

<h1>Crear favorito</h1>

<div class="content-hr-both show-content">
    <form action="{{ path('favorito_create', {'id_archivo':archivo}) }}" method="post" {{ form_enctype(form) }}>
        <div class="element-float-left margin-basic-right border-basic-right padding-basic-right">
            <table class="table table-hover">
                <tr>
                    <th>Nombre</th>
                    <td>{{ favorito.nombreArchivo }}</td>
                </tr>
                <tr>
                    <th>Ubicaci√≥n</th>
                    <td>{{ favorito.rutaArchivo }}</td>
                </tr>
                <tr>
                    <th>Instancia</th>
                    <td>{{ favorito.nombreInstancia }}</td>
                </tr>
            </table>
        </div>
        <div class="element-float-left margin-basic-right">    
            {{ form_widget(form) }}
            </div>
            <div class="clearfix"></div>
            <p class="actions-forms">
                <button type="submit" class="btn btn-success active">
                    <span class="glyphicon glyphicon-ok"></span> Guardar
                </button>
            </p>
        </form>
    </div>

    <div class="show-actions">
        <a class="btn btn-default active" role="button" href="{{ path('favorito') }}">
            <span class="glyphicon glyphicon-th-list"></span> Lista de favoritos
        </a>

    </div>


{% endblock%}