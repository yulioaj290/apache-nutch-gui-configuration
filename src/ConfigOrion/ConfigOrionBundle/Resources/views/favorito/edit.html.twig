{% extends 'ConfigOrionBundle::layout.html.twig' %}
{% block body%}

<ul class="breadcrumb">  
    <li><a href="{{ path('favorito') }}">Favoritos</a></li>    
    <li>Editar favorito</li>
</ul>

<h1>Editar Favorito</h1>

<div class="content-hr-both show-content">
    <form action="{{ path('favorito_update', {'id':favorito.id}) }}" method="post" {{ form_enctype(edit_form) }}>
        <table class="table table-hover">
            <tr>
                <th>Nombre</th>
                <td>{{ favorito.nombreArchivo }}</td>
            </tr>
            <tr>
                <th>Ubicación</th>
                <td>{{ favorito.rutaArchivo }}</td>
            </tr>
            <tr>
                <th>Instancia</th>
                <td>{{ favorito.nombreInstancia }}</td>
            </tr>
            <tr>
                <th>{{ form_label(edit_form.descripcion) }}</th>
                <td>{{ form_errors(edit_form.descripcion) }}{{ form_widget(edit_form.descripcion) }}</td>
            </tr>
        </table>
        <div class="hidden">{{ form_rest(edit_form) }}</div>
        <p class="actions-forms">
            <button type="submit" class="btn btn-success active">
                <span class="glyphicon glyphicon-ok"></span> Guardar
            </button>
        </p>
    </form>
</div>

<div class="show-actions">
    <a class="btn btn-default active" role="button" href="{{ path('favorito') }}">
        <span class="glyphicon glyphicon-th-list"></span> Lista de favoritos
    </a>
    <button class="btn btn-danger active" data-toggle="modal" data-target="#modalDelete">
        <span class="glyphicon glyphicon-remove"></span> Eliminar
    </button>

    <div class="modal fade" id="modalDelete" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h4 class="modal-title" id="myModalLabel">Antenci&oacute;n!!!</h4>
                </div>
                <div class="modal-body">
                    ¿Est&aacute; seguro que desea eliminar este dato?
                </div>
                <div class="modal-footer">
                    <form action="{{ path('favorito_delete', { 'id': favorito.id }) }}" method="post">
                        {{ form_widget(delete_form) }}
                        <button type="submit" class="btn btn-danger">
                            <span class="glyphicon glyphicon-remove"></span> Si
                        </button>
                    </form>
                    <button type="button" class="btn btn-default" data-dismiss="modal">No</button>
                </div>
            </div><!-- /.modal-content -->
        </div><!-- /.modal-dialog -->
    </div><!-- /.modal -->


</div>


{% endblock%}