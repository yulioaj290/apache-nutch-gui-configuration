{% extends 'ConfigOrionBundle::layout.html.twig' %}
{% block body%}

<h1>Crear usuario</h1>


<div class="content-hr-both show-content">
    <form action="{{ path('usuario_create') }}" method="post" {{ form_enctype(form) }}>
        <div class="element-float-left margin-basic-right border-basic-right padding-basic-right">
            {{ form_row(form.nombre) }}
            {{ form_row(form.username) }}
            {{ form_row(form.roles) }}
        </div>
        <div class="element-float-left">
            {{ form_row(form.password) }}
            {{ form_row(form.email) }}
        </div>
        <div class="hidden">{{ form_rest(form) }}</div>
        <div class="clearfix"></div>
        <p class="actions-forms">
            <button type="submit" class="btn btn-success active">
                <span class="glyphicon glyphicon-ok"></span> Guardar
            </button>
        </p>
    </form>
</div>

<div class="show-actions">
    <a class="btn btn-default active" role="button" href="{{ path('usuario') }}">
        <span class="glyphicon glyphicon-th-list"></span> Lista de usuarios
    </a>
        
</div>


{% endblock%}