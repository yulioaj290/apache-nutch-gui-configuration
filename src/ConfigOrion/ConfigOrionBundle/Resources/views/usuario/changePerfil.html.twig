{% extends 'ConfigOrionBundle::layout.html.twig' %}
{% block body%}

<h1>Editar perfil de usuario <i>&quot;{{ document.nombre ~ ' ('~ document.username ~ ')' }}&quot;</i></h1>

<div class="content-hr-both show-content">
    <form action="{{ path('usuario_update_perfil', { 'id': document.id }) }}" method="post" {{ form_enctype(edit_form) }}>
        <table class="table table-hover">           
            <tr>
                <th>Usuario</th>
                <td>{{ document.username }}</td>
            </tr>        
            <tr>
                <th>Rol</th>
                <td>
                        {% for rolesField in document.roles %}
                            {{ rolesField }}
                        {% endfor %}
                </td>
            </tr>
            <tr>
                <th>{{ form_label(edit_form.nombre) }}</th>
                <td>{{ form_errors(edit_form.nombre) }}{{ form_widget(edit_form.nombre) }}</td>
            </tr>     
            <tr>
                <th>{{ form_label(edit_form.email) }}</th>
                <td>{{ form_errors(edit_form.email) }}{{ form_widget(edit_form.email) }}</td>
            </tr>     
        </table>
        <div class="hidden">{{ form_rest(edit_form) }}</div>
        <p class="actions-forms">
            <button type="submit" class="btn btn-success active">
                <span class="glyphicon glyphicon-ok"></span> Guardar
            </button>
        </p>
    </form>
</div>


{% endblock%}