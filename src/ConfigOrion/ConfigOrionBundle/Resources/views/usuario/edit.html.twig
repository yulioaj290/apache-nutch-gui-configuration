{% extends 'ConfigOrionBundle::layout.html.twig' %}
{% block body%}

<h1>Editar usuario</h1>

<div class="content-hr-both show-content">
    <form action="{{ path('usuario_update', { 'id': document.id }) }}" method="post" {{ form_enctype(edit_form) }}>
        <div class="element-float-left margin-basic-right border-basic-right padding-basic-right">
            {{ form_row(edit_form.nombre) }}
            {{ form_row(edit_form.username) }}
            {{ form_row(edit_form.roles) }}
        </div>
        <div class="element-float-left">
            {{ form_row(edit_form.password) }}
            {{ form_row(edit_form.email) }}
        </div>
        <div class="hidden">{{ form_rest(edit_form) }}</div>
        <div class="clearfix"></div>
        <p class="actions-forms">
            <button type="submit" class="btn btn-success active">
                <span class="glyphicon glyphicon-ok"></span> Guardar
            </button>
        </p>
    </form>
</div>

<div class="show-actions">
    <a class="btn btn-default active" role="button" href="{{ path('usuario') }}">
        <span class="glyphicon glyphicon-th-list"></span> Lista de usuarios
    </a>
            <button class="btn btn-danger active" data-toggle="modal" data-target="#modalDelete">
        <span class="glyphicon glyphicon-remove"></span> Eliminar
    </button>

    <div class="modal fade" id="modalDelete" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h4 class="modal-title" id="myModalLabel">Antenci&oacute;n!!!</h4>
                </div>
                <div class="modal-body">
                    Â¿Est&aacute; seguro que desea eliminar este dato?
                </div>
                <div class="modal-footer">
                    <form action="{{ path('usuario_delete', { 'id': document.id }) }}" method="post">
                        {{ form_widget(delete_form) }}
                        <button type="submit" class="btn btn-danger">
                            <span class="glyphicon glyphicon-remove"></span> Si
                        </button>
                    </form>
                    <button type="button" class="btn btn-default" data-dismiss="modal">No</button>
                </div>
            </div><!-- /.modal-content -->
        </div><!-- /.modal-dialog -->
    </div><!-- /.modal -->
    
    
</div>


{% endblock%}