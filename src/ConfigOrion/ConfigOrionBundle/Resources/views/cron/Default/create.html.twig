{% extends 'ConfigOrionBundle:cron:layout.html.twig' %}

{% block content %}

    <div class="panel panel-default accordion-left">
        <!-- Default panel contents -->
        <div class="panel-heading">
            <h1>{% if (instancia is defined) %}
                    {{ 'Add a cron of instance %name%' | trans({'%name%': instancia.nombre}, 'ConfigOrionBundle') }}
                {% else %}
                    {{ 'Add a cron' | trans({}, 'ConfigOrionBundle') }}
                {% endif %}
                <a href="
                {% if (instancia is defined) %}
                {{ path('cron_admin', {'id' : instancia.id}) }}
                {% else %}
                {{ path('cron_index') }}
                {% endif %}
                " class="btn btn-default align-right" role="button" rel="tooltip"
                   data-placement="top" data-original-title="{{ 'Level up' | trans({}, 'ConfigOrionBundle') }}">
                    <span class="glyphicon glyphicon-chevron-up"></span>
                </a>
            </h1>
        </div>
        <div class="panel-body">
            <form role="form" method="post" action="{{ path('cron_add') }}">
                {% include 'ConfigOrionBundle:cron/Default:form.html.twig' with {'form': form} %}
                <input type="submit" class="btn btn-success adjust" name="{{ 'Add' | trans({}, 'ConfigOrionBundle') }}"
                       value="{{ 'Add' | trans({}, 'ConfigOrionBundle') }}"/>
            </form>
        </div>
    </div>
{% endblock %} 
