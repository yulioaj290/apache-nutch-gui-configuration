{% extends 'ConfigOrionBundle::layout.html.twig' %}
{% block body%}

<h1>Lista de plugins</h1>

<div class="content-hr-both">
    <div class="panel panel-default">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Nombre</th>
                    <th>Ruta</th>
                    <th>Descripci&oacute;n</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
            {% for document in documents %}
                <tr>
                    <td><a href="{{ path('plugin_show', { 'id': document.id }) }}">{{ document.nombre }}</a></td>
                    <td>{{ document.ruta }}</td>
                    <td>{{ document.descripcion }}</td>
                    <td>        <a href="{{ path('plugin_show', { 'id': document.id }) }}"><span class="glyphicon glyphicon-eye-open"></span></a>
    &nbsp;
                        <a href="{{ path('plugin_edit', { 'id': document.id }) }}"><span class="glyphicon glyphicon-edit"></span></a>
    &nbsp;
        
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
</div>

<div class="show-actions">
    <a class="btn btn-primary active" role="button" href="{{ path('plugin_new') }}">
        <span class="glyphicon glyphicon-plus"></span> Crear plugin
    </a>
</div>

{% endblock%}